/* pages/index-op1/index-op1.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-image: linear-gradient( 135deg, #e4f4ff 10%, #82bbe4 100%);
}

.tablist {
  display: flex;
  background: #0a62d0;
    height: 80rpx;
    position: absolute;
    left: 0%;
    right: 0%;
    bottom: 0%;
}

.tablist .item {
  flex: auto;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    font-size: 11pt;
    color: #ffffff;
}

.tablist .item.select {
    color: #f3d849;
}

.tablist .item.select::after {
    content: "";
    height: 3rpx;
    display: block;
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    background: #f3d849;
}

.content{
    height: 7%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.search_box{
  width: 100%; 
  background-color: #0a62d0;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  position: absolute;
  top: auto;
}
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  width: 80%;
  height: 60rpx;
  margin: 0 auto;
 
  /* margin-top: 5%; */
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
}

/* 搜索框提示文字样式 */
.search input {
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

/* 搜索框小图标 */
.search image {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  padding-right: 0rpx;
}

