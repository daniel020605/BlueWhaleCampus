/**index.wxss**/
page {
  overflow:  hidden;
  width: 100%;
  height: 100px;
  background: linear-gradient(90deg, #74a2eb, #b69fbd, #dabe9c, #b69fbd, #74a2eb);
  background-size: 1400% 300%;
  animation: dynamics 2s ease infinite;
  -webkit-animation: dynamics 2s ease infinite;
  -moz-animation: dynamics 2s ease infinite;
}


.tablist {
  display:block;
  background: linear-gradient(90deg, #bcd1f3, #e7d7ec, #ddd0c0, #e7d7ec, #bcd1f3);
  height: 80rpx;
  position: static;
  left: 0%;
  right: 0%;
  top: 0%;
  color: #E7624F;
}
.backblock{
  position:absolute;
  background-color: #ffffff;
  left: 10%;
  right: 10%;
  top: 40%;
  width: 80%;
  height: 50%;
  opacity:0.5;
  border-radius: 50rpx;
  z-index:-100;
  background: linear-gradient(90deg, #bcd1f3, #e7d7ec, #ddd0c0, #e7d7ec, #bcd1f3);
  background-size: 1400% 300%;
  animation: dynamics 2s ease infinite;
  -webkit-animation: dynamics 2s ease infinite;
  -moz-animation: dynamics 2s ease infinite;
}
@keyframes backblock {
  0% {
      background-position: 0% 0%;
  }

  50% {
      background-position: 50% 100%;
  }

  100% {
      background-position: 100% 0%;
  }
}
.slider {
  width: 650rpx;
  margin: 40rpx auto;
}
.task_text {
  height: 120rpx;
  margin: 50rpx auto;
  text-align: center;
}
.task_text .task_title {
  font-size: 35rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.task_text .task_desc {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #575757;
}
.task_cate {
  
  width: 660rpx;
  margin: 30% auto;
  display: flex;
  flex-wrap: wrap;
}
.task_cate .cate_item {
  width: 220rpx;
  height: 130rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.task_cate .cate_item .cate_icon {
  height: 70rpx;
}
.task_cate .cate_item .cate_icon image {
  width: 50rpx;
  height: 50rpx;
}
.task_cate .cate_item .cate_text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.task_cate .cate_item .cate_text_active {
  color: #E7624F;
}
.start {
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: -25% auto;
  border: 2rpx solid #E7624F;
  color: #E7624F;
  border-radius: 20rpx;
}
.clock {
  overflow: hidden;
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
  background-size: 200% 200%;
  animation: gradientBG 5s ease infinite;
}
@keyframes clock {
  0% {
      background-position: 0% 50%;
  }
  50% {
      background-position: 100% 50%;
  }
  100% {
      background-position: 0% 50%;
  }
}
.progress {
  width: 400rpx;
  height: 400rpx;
  /* background: orange; */
  margin: 140rpx auto;
  position: relative;
}
.progress .progress_bg,.progress .progress_active {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}
.progress .progress_text {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #ffffff;
  text-align: center;
  position: absolute;
  left: 120rpx;
  top: 170rpx;
}
.btns .okBtn,.btns .pauseBtn,.btns .continueBtn,.btns .cancleBtn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  border: 3rpx solid #ffffff;
  border-radius: 20rpx;
  margin: 0 auto 20rpx auto;
}